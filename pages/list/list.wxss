/* pages/list/list.wxss */
page{
  background: #f1f0f2
}
.product{
  margin-top: 100rpx;
}
.product .product-item {
  height: 500rpx
}
.search-content {
  background: white;
  width: 650rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: auto;
  padding-left: 20rpx;
  padding-bottom: auto;
  border-right: none;
  margin: auto;
  height: 70rpx;
  border-radius: 5px 5px;
  border: 1px solid #cd9b01;
  box-sizing: border-box;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.search-input {
  width: 500rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 150rpx;
  height: 70rpx;
  margin-right: 0rpx;
  background-color: #cd9b01;
  font-size: 28rpx;
  align-items: center;
  border-top-left-radius: 0rpx;
  border-bottom-left-radius: 0rpx;
  color: #fff;
  border: none;
  cursor: pointer;
  position: relative;
}
.product .product-item .price .red{
  color: #fe5401;
  margin-right: 30rpx;
  text-decoration:none;
  margin-bottom: 10rpx
}
.product .product-item .price{
  width: 329rpx;
}
.product .product-item.addHeight{
  height: 465rpx;
}
.product-box .price view {
  text-align: left;

}