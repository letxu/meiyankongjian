/* pages/user/card/card.wxss */
page{
  background: #f0f1f2
}
.card-item{
  width: 710rpx;
  height:225rpx; 
  background: #658ce9;
  border-radius: 15rpx;
  color: #fff; 
  margin: 30rpx auto 30rpx;
  font-size: 28rpx;
}
.card-item>view{
  padding: 50rpx 0 0 50rpx;

}
.card-item>view text{
  margin-left: 15rpx;
}
.increase-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  overflow: hidden;
}

.increase-img {
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 36rpx;
  margin-left: 35rpx;
}

.increase-tit {
  float: left;
  font-size: 28rpx;
  line-height: 100rpx;
  margin-left: 28rpx;
  color: #2b2b2b;
}

.increase-arrow {
  float: right;
  width: 14rpx;
  height: 26rpx;
  margin-right: 20rpx;
  margin-top: 38rpx;
}
.card{
  margin-bottom: 120rpx;
}