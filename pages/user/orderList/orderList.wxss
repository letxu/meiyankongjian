
/*顶部tab导航  */
page{
  background: #f1f0f2;
}
.flex_row{
  width: 100%;
  display: flex;
  position: fixed;
   background: #fff;
   z-index: 10
}
.menu {
  padding: 0 50rpx;
  justify-content: space-between;
  background: #fff;
}
.contact-button{
  opacity: 0
}
.menu-list {
  width: 130rpx;
  padding: 20rpx 0;
  border-bottom: 14rpx solid transparent;
  box-sizing: border-box;
  position: relative;
  text-align: center;
  font-size: 28rpx;
  flex: 1;
}

.menu-list-on {
  font-weight: 700;
  color: #cd9b01;
}

.menu-list-on::after {
  content: '';
  position: absolute;
  width: 70rpx;
  height: 4rpx;
  left: 50%;
  transform: translateX(-50%);
  bottom: -6rpx;
  font-weight: 700;
  border-bottom: 6rpx solid #cd9b01;
  color: #cd9b01;
}
.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}



.order-list{
    width: 100%;
    margin-top: 100rpx;
}
.order-list .a-order{
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
}
.order-list .a-order .order-date{
    padding: 0 30rpx;
    height: 88rpx;
    display: flex;
    justify-content: space-between;
    font-size:26rpx;
    color:#000000;
    align-items: center;
}
.order-list .a-order .order-date .red{
    font-size:26rpx;
    color:#e64340;
}
.a-order  .goods-info,
.goods-img-container{
    width: 720rpx;
    margin-left: 30rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
}
.goods-info .img-box{
    width: 220rpx;
    height: 200rpx;
    overflow: hidden;
    margin-right: 30rpx;
    background-color: #f7f7f7;
}

.goods-img-container .img-box .goods-img{
  width: 220rpx;
  height: 200rpx;
}
.goods-info  .goods-des{
    width: 540rpx;
    height: 50rpx;
    line-height: 39rpx;
    font-size:26rpx;
    color:#000000;
    overflow: hidden;
}
.goods-img-container{
    height: 240rpx;
    box-sizing: border-box;
    white-space: nowrap;
  
}
.goods-img-container .img-box{
    width: 220rpx;
    height: 200rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #f7f7f7;
    float: left

}
.content-box{
  float: left;
  width:450rpx;
}
.content-box .box-title{
  color: #333;
  font-size: 28rpx;
  width: 100%;
  text-overflow: ellipsis;
  word-wrap: break-word;
  overflow: hidden;
  margin-top: 30rpx
}
.content-box .box-price{
  font-size: 26rpx;
  color: #cd9b01;
  margin-top: 80rpx;
}
.content-box .box-price .num{
  color: #999999;
  font-size: 30rpx;
  margin-left: 50rpx;
}
.order-list .a-order .price-box{
    position: relative;
    width: 720rpx;
    height: 100rpx;
    margin-left: 30rpx;
    box-sizing: border-box;
    padding: 20rpx 30rpx 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size:26rpx;
}
.price-box .left-text{
  flex: 1
}
.order-list .a-order .price-box .total-price{
    font-size:26rpx;
    color:#cd9b01;
}
.a-order .price-box .btn{
    width: 166rpx;
    height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 60rpx;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size: 28rpx;
}
.price-box button{
  padding: 0;
  position: absolute;
  right: 30rpx;
}
.a-order .price-box .cancel-btn{
    border: 1rpx solid #ccc;
    position: absolute;
    right: 216rpx;
    top:20rpx;
}
.a-order .price-box .topay-btn{
    border:1px solid #cd9b01;
    color: #fff;
    background: #cd9b01
}
