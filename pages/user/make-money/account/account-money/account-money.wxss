page {
  background: #eee;
}

.pro-item text text {
  font-size: 35rpx;
  padding-left: 30rpx;
}

.main {
  width: 91%;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 19rpx;
  padding-bottom:  10rpx;
}

.main .title {
  width: 100%;
}

.main1 {
  width: 91%;
  margin: 30rpx auto;
  background: #fff;
  border-radius: 19rpx;
  min-height: 100rpx;
}

.main1 .title {
  width: 97%;
}

.card {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #333;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  margin-top: 20rpx;
}

.card .addCart {
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.addCart image{
  position: absolute;
  top: 32rpx;
  right: 5rpx;
  width: 16rpx;
  height: 32rpx;
}
.title {
  width: 100%;
  color: #333;
  position: relative;
  display: inline-block;
  left: 8%;
  margin-top: 30rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.title::before {
  content: "";
  position: absolute;
  font-size: 40rpx;
  width: 6rpx;
  height: 30rpx;
  top: 5rpx;
  left: -20rpx;
  background: #cba970;
}

.makeMoner {
  position: relative;
  display: inline-block;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
  width: 90%;
  margin-left: 5%;
}

.makeMoner::before {
  content: "Â¥";
  position: absolute;
  font-size: 72rpx;
  top: -30rpx;
}

.makeMoner input {
  margin-left: 70rpx;
}

button {
  width: 90%;

  margin-top: 20rpx;
  background: #cba970;
  color: #fff;
  border-radius: 50rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  float: left;
  margin: 0 5%
}

.instructions {
  color: #f60;
  text-align: center;
  padding: 30rpx 0 50rpx;
}

.instructions text {
  border-bottom: 1px solid #f60;
  font-size: 26rpx;
  margin: 0 25rpx
}

.textStyle {
  font-size: 30rpx;
  color: #999;
}

.detail-item {
  width: 100%;
  display: flex;
  height: 120rpx;
  background: #fafafa;
  padding-top: 30rpx;
}

.detail-item:nth-child(2n) {
  background: #fff;
}

.detail-item .name {
  flex: 1;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}

.detail-item .right {
  flex: 1;
  text-align: right;
  padding-right: 5%;
}

.detail-item .right .timer {
  font-size: 24rpx;
  margin-bottom: 15rpx;
  color: #999;
}

.detail-item .right .money {
  color: #f60;
  font-size: 30rpx;
}

.detail-item:last-child {
  border-bottom-left-radius: 19rpx;
  border-bottom-right-radius: 19rpx;
}

.i-money {
  width: 90%;
  margin: 20rpx auto 40rpx;
  font-size: 30rpx;
  color: #999;
}
.i-money text{
  color: #000
}
.btns{
   width: 90%;
   display: inline-block;
  margin-left: 5%;
}

.i-money text {
  margin-left: 20rpx;
}
