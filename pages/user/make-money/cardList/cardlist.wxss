/* pages/user/make-money/cardList/cardlist.wxss */

page {
  background: #f1f0f2;
}

.card-item {
  width: 100%;
  height: 225rpx;
  margin-top: 30rpx;
}


.card-item image {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-top: 90rpx;
}

.card-item .icon-nomal {
  display: block;
}

.card-item .icon-active {
  display: none;
}

.card-item.active .icon-nomal {
  display: none;
}

.card-item.active .icon-active {
  display: block;
}

.cardBox {
  width: 94%;
  margin: 0 auto 120rpx;
  
}

.card-right {
  width: 640rpx;
  height: 225rpx;
  background: #658ce9;
  border-radius: 10rpx;
  color: #fff;
  font-size: 28rpx;
  float: right;
}

.card-right>view {
  margin: 50rpx 0 0 60rpx;
}

.increase-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  overflow: hidden;
}

.increase-img {
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 36rpx;
  margin-left: 35rpx;
}

.increase-tit {
  float: left;
  font-size: 28rpx;
  line-height: 100rpx;
  margin-left: 28rpx;
  color: #2b2b2b;
}

.increase-arrow {
  float: right;
  width: 14rpx;
  height: 26rpx;
  margin-right: 20rpx;
  margin-top: 38rpx;
}
