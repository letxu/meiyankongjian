/* pages/addressList/addressList.wxss */
page {
  min-height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
  padding-top: 20rpx;
}

.main {
  width: 100%;
  overflow: hidden;
  margin-bottom: 110rpx;
}


.address-box {
  width: 100%;
  height: 146rpx;
  border-bottom: 1px solid #e5e5e5;
  background-color: #fff;
}

.choose-img {
  float: left;
  width: 32rpx;
  height: 22rpx;
  margin-left: 20rpx;
  padding-top: 70rpx;
}

.choose-img image {
  display: block;
  width: 100%;
  height: 100%;
}

.address-info {
  float: left;
  width: 600rpx;
  height: 100%;
  margin-left: 30rpx;
}

.address-name {
  width: 100%;
  height: 48rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  padding-top: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #2b2b2b;
}

.address-m {
  width: 100%;
  height: 48rpx;
  font-size: 24rpx;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #7c7c7c;
}

.address-modify {
  width: 36rpx;
  height: 100%;
  float: right;
  margin-right: 20rpx;
}

.address-modify image {
  width: 100%;
  height: 36rpx;
  margin-top: 64rpx;
}

.increase-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  overflow: hidden;
}

.increase-img {
  float: left;
  width: 30rpx;
  height: 30rpx;
  margin-top: 36rpx;
  margin-left: 20rpx;
}

.increase-tit {
  float: left;
  font-size: 28rpx;
  line-height: 100rpx;
  margin-left: 28rpx;
  color: #2b2b2b;
}

.increase-arrow {
  float: right;
  width: 14rpx;
  height: 26rpx;
  margin-right: 20rpx;
  margin-top: 38rpx;
}