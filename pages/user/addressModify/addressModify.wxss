/* pages/addressModify/addressModify.wxss */

page {
  min-height: 100%;
  background-color: #fff;
}

.container {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
  padding-top: 20rpx;
}

.form-box {
  width: 100%;
}

.inp-box {
  width: 100%;
  height: 98rpx;
  font-size: 28rpx;
  line-height: 98rpx;
  background-color: #fff;
  padding: 0 20rpx;
  border-bottom: 1px solid #e5e5e5;
}

.modify-input {
  display: block;
  width: 94%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 28rpx;
  color: #2b2b2b;
}

.address-inp {
  font-size: 28rpx;
  color: #aeaeae;
}

.details-inp {
  width: 100%;
  height: auto;
  padding: 36rpx 0;
  padding-left: 20rpx;
  font-size: 28rpx;
  background-color: #fff;
  border-bottom: 1px solid #e5e5e5;
}

.details-inp textarea {
  box-sizing: border-box;
  height: 72rpx;
  width: 94%;
  line-height: 36rpx;
  overflow-y: auto;
}

.address-text {
  font-size: 28rpx;
  line-height: 36rpx;
  padding-top: 20rpx;
  color: #aeaeae;
}

.set-box {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

.set-t {
  float: left;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #2b2b2b;
  margin-left: 20rpx;
}

.set-choose {
  float: right;
  width: 106rpx;
  height: 56rpx;
  margin-right: 40rpx;
  margin-top: 24rpx;
}

.delete {
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #e5e5e5;
  background-color: #fff;
  color: #cd9b01;
}

.complete-box {
  position: fixed;
  width: 100%;
  border-top: 1px solid #ddd;
  padding-top: 12rpx;
}

.complete-btn {
  position: fixed;
  bottom: 0rpx;
  border-radius: 0;
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  background-color: #cd9b01;
  color: #fff;
}
