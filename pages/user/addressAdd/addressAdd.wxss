/* pages/addressAdd/addressAdd.wxss */
page {
  min-height: 100%;
  background-color: #f5f5f5;
}

.container {
  display: block;
  min-height: 100%;
  background-color: #f5f5f5;
  padding-top: 20rpx;
}

.form-box {
  width: 100%;
  background-color: #fff;
}

.row-wrap {
  width: 730rpx;
  height: 98rpx;
  line-height: 98rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  font-size: 28rpx;
  color: #2b2b2b;
}

.label {
  width: 170rpx;
}

.row-wrap .label-right {
  flex: 1;
  height: 98rpx;
  line-height: 98rpx;
}

.add-input {
  height: 100%;
  font-size: 28rpx;
  padding-right: 20rpx;
}

.address-inp {
  font-size: 28rpx;
  color: #aeaeae;
}

.picker {
  width: 560rpx;
}

.addr-details{
  height: auto;
  padding: 36rpx 0;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  font-size: 28rpx;
}
.addr-details .label{
  margin: 0 0 auto 0;
  width: 170rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.addr-details textarea{
  box-sizing: border-box;
  height: 72rpx;
  width: 500rpx;
  line-height: 36rpx;
  overflow-y: auto;
}

.address-text {
  font-size: 28rpx;
  line-height: 36rpx;
  padding-top:  20rpx;
  color: #aeaeae;
}

.confirm-btn {
  position: fixed;
  bottom: 0rpx;
  border-radius: 0;
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;
  line-height: 90rpx;
  background-color: #cd9b01;
  color: #fff;
}