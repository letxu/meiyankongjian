/* pages/cart/template-cart/template-cart.wxss */
page{
  background: #eee
}
.cart-top {
  width: 100%;
  text-align: center;
  padding: 100rpx 0 100rpx;
}

.cart-top navigator {
  width: 300rpx;
  margin: 0 auto;
  color: #fff;
  font-size: 22rpx;
  padding: 15rpx 0;
  border-radius: 10rpx;
}

.cart-top>image {
  width: 288rpx;
  height: 249rpx;
}

.cart-top>view {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  width: 100%;
  margin-top: 20rpx;
}

.shop-box {
  background: #fff;
  margin-top: 30rpx;
  padding: 0 20rpx;
  margin-bottom: 200rpx;
}

.shop-top {
  color: #8841c5;
  text-align: right;
  font-size: 24rpx;
  padding: 15rpx 0;
}

.shop-detail {
  font-size: 20rpx;
  color: #474747;
  display: flex;
  padding-bottom: 30rpx;
  padding-top: 20rpx;
  border-top: 1px solid #b6b4b3;
}

.shop-img {
  flex: 1;
}

.shop-img image {
  width: 90%;
  height: 290rpx;
}

.shop-content {
  flex: 2;
}

.shop-content>view {
  margin-top: 15rpx;
}

.title {
  font-size: 24rpx;
}

.price {
  font-size: 24rpx;
  font-weight: bold;
}

.number {
  font-size: 20rpx;
  color: #1f1f20;
}

.color {
  font-size: 20rpx;
  color: #1f1f20;
}

.size {
  font-size: 20rpx;
  color: #1f1f20;
}

.shop-detail text {
  color: #fe5401;
  font-size: 100rpx;
  height: 50rpx;
  line-height: 20rpx;
  margin-right: 10rpx;
}

.shop-bottom {
  background: #fff;
  position: fixed;
  width: 100%;
  text-align: center;
  bottom: 0rpx;
  padding: 15rpx 0;
  z-index: 10;
}

.shop-bottom button {
  background: #8841c5;
  color: #fff;
  width: 94%;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 30rpx;
}

.shop-bottom view {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.shop-bottom view text {
  color: #8841c5;
}

.content-top {
  text-align: center;
  font-size: 24rpx;
  color: #878787;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 30rpx;
}

.coupon {
  display: flex;
}

.coupon>view.coupon-detail {
  flex: 3;
}

.coupon>view {
  flex: 1;
}

.modal-content {
  padding: 0 20rpx 30rpx;
}

.coupon-detail view {
  color: #7b7b7b;
  font-size: 24rpx;
}

.coupon view.price {
  color: #8841c5;
  font-size: 36rpx;
  margin-bottom: 25rpx;
}

.receive-detail {
  text-align: center;
}

.receive-detail .receive {
  color: #8841c5;
  font-size: 20rpx;
  display: inline-block;
  padding: 5rpx 40rpx;
  border: 1px solid #8841c5;
  border-radius: 5rpx;
  margin-top: 60rpx;
}

.receive-detail .not-receive {
  font-size: 20rpx;
  color: #7b7b7b;
  display: inline-block;
  margin-top: 60rpx;
}
